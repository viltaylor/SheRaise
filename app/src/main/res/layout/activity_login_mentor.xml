<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/mentorlogo"
        android:contentDescription="Logo" />

    <!-- Rounded Top Card Background -->
    <LinearLayout
        android:id="@+id/loginForm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/top_rounded_card"
        android:paddingTop="24dp"
        android:paddingBottom="30dp"
        android:paddingHorizontal="32dp"
        android:gravity="top">

        <!-- Handle Bar -->
        <View
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:background="#E0E0E0"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@android:color/darker_gray" />

        <!-- Title -->
        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Login"
            android:textColor="#222222"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/emailLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_border"
            android:hint="shannon@gmail.com"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="16dp"
            android:textColorHint="#888888"
            android:textColor="#000000" />

        <!-- Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Password"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/passwordLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_border"
            android:hint="Password"
            android:paddingHorizontal="16dp"
            android:inputType="textPassword"
            android:textColorHint="#888888"
            android:textColor="#000000" />

        <!-- Sign Up Link -->
        <LinearLayout
            android:id="@+id/signupContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-10dp">

            <TextView
                android:id="@+id/txtNoAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donâ€™t have an Account?"
                android:textColor="#222222"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Sign Up"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>


        <!-- Login Button -->
        <Button
            android:id="@+id/btnLoginConfirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_dark_button"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <!-- Google Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoogle"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_white_button"
            android:text="Login With Google"
            app:backgroundTint="@null"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>
