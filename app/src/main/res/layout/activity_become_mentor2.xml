<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="center_horizontal">

    <!-- Hero Image -->
    <ImageView
        android:id="@+id/mentorImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/mentorlogo"
        android:contentDescription="Mentor Illustration" />

    <!-- Rounded Card Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/top_rounded_card"
        android:padding="24dp"
        android:layout_marginTop="16dp">

        <!-- Indicator -->
        <View
            android:layout_width="48dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:background="#EAEAEA" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Become a SheRaise mentor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for joining SheRaise as a mentor! Please fill in the information below so we can showcase your profile to learners."
            android:textSize="14sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="24dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <!-- Get Started Button -->
        <Button
            android:id="@+id/btnGetStarted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:textColor="#F06292"
            android:background="@drawable/button_white_rounded"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="180dp" />


    </LinearLayout>
</LinearLayout>
