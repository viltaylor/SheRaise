<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_white_bg"
                android:src="@drawable/BackButton"
                android:scaleType="center"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job-Seeker"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- Job Info Section -->
        <TextView
            android:text="Product Designer"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/slack_logo"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="Slack"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:text="Slack.com"
                    android:textSize="12sp"
                    android:textColor="#007AFF" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:text="$105k - $180k"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Jun 16, 2021"
                    android:textSize="12sp"
                    android:textColor="#007AFF" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tags Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/rounded_card_blue"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_applicants"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:text="Applicants"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="113"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/rounded_card_yellow"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:text="Location"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="New York"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/rounded_card_pink"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_fulltime"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:text="Type"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="Full time"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Job Details -->
        <TextView
            android:text="JOB DETAILS"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:text="‘Slack is a proprietary business communication platform developed by American software company Slack Technologies. Slack offers many IRC-style features, including persistent chat rooms organized by topic, private groups, and direct messaging…’"
            android:textColor="#004D40"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:text="We’ve always believed in making work better—both for our customers and for everyone working here at Slack. That’s why we’re committed to building a culture of empathy, transparency, and respect."
            android:textSize="14sp"
            android:layout_marginBottom="80dp" />

        <!-- Apply Button -->
        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_gradient"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
