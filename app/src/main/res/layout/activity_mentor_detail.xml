<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/BackButton"
        android:background="@drawable/circle_white_bg"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="4dp"/>

    <!-- Page Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mentor Detail"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/btnBack" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/imgMentor"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/mentor1"
        android:scaleType="centerCrop"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:background="@drawable/image_rounded" />

    <!-- Name and Role -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/imgMentor"
        android:layout_alignTop="@id/imgMentor"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/tvMentorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clara Mentos"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvMentorCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Math Bachelor"
            android:textColor="#888888"
            android:textSize="14sp" />

        <!-- COST and RATING -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_cost"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 0.80/min"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginEnd="16dp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_rating"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500+ ratings"
                android:textColor="#000000"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Bio Section -->
    <LinearLayout
        android:id="@+id/bioCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_border"
        android:padding="16dp"
        android:layout_below="@id/imgMentor"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Relevant Certification: Certified Java Mathematician\n\nEmployment History: Mathematic Teacher at Binus University\n\nEmail: ClaraMentos@gmail.com\nTelephone Number: +62 812-1234-5321\nLinkedIn: linkedin.com/in/claramentos"
            android:textColor="#444444"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Book Button -->
    <Button
        android:id="@+id/btnBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book This Mentor"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_pink_gradient"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"/>
</RelativeLayout>
