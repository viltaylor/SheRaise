<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jobDetailLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Top Navigation -->
    <RelativeLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/BackButton"
            android:background="@drawable/circle_white_bg"
            android:scaleType="center"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job-Seeker"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- Content Scrollable -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnApply"
        android:layout_below="@id/headerBar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Job Title -->
            <TextView
                android:text="Product Designer"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- Logo, Company Info, Salary -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/slackIcon"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:text="Slack"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:text="Slack.com"
                        android:textSize="12sp"
                        android:textColor="#007AFF" />

                    <TextView
                        android:text="⭐ 4.9 (124)"
                        android:textSize="12sp"
                        android:textColor="#888888" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:text="$105k - $180k"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000" />

                    <TextView
                        android:text="Jun 16, 2021"
                        android:textSize="12sp"
                        android:textColor="#007AFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- Info Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_card_blue"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center">

                    <TextView android:text="Applicants"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>
                    <TextView android:text="113"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_card_yellow"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center">

                    <TextView android:text="Location"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>
                    <TextView android:text="Jakarta"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_card_pink"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center">

                    <TextView android:text="Type"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>
                    <TextView android:text="Full Time"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Job Description -->
            <TextView
                android:text="JOB DETAILS"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:text="‘Slack is a proprietary business communication platform developed by American software company Slack Technologies. Slack offers many IRC-style features, including persistent chat rooms organized by topic, private groups, and direct messaging…’"
                android:textColor="#004D40"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:text="We’ve always believed in making work better—both for our customers and for everyone working here at Slack. That’s why we’re committed to building a culture of empathy, transparency, and respect."
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Apply Button Fixed Bottom -->
    <Button
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/confirm_button"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp" />
</RelativeLayout>
