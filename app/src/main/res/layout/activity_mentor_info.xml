<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MentorInfoActivity">

    <!-- Top Image -->
    <ImageView
        android:id="@+id/imageMentor"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/mentorlogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Rounded Card Form -->
    <LinearLayout
        android:id="@+id/mentorForm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/top_rounded_card"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/imageMentor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Indicator Bar -->
        <View
            android:layout_width="48dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:background="#EAEAEA"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tell us more"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="20dp" />

        <!-- Full Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="14sp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_rounded"
            android:hint="Enter your complete name."
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Brief Bio -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brief Bio"
            android:textSize="14sp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/etBio"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_rounded"
            android:hint="Tell us a little about your background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Certifications -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Certifications / Qualifications"
            android:textSize="14sp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/etCertificate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_rounded"
            android:hint="Upload here"
            android:drawableEnd="@drawable/ic_upload"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Area of Expertise -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area of Expertise"
            android:textSize="14sp"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spExpertise"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_rounded"
            android:layout_marginBottom="4dp" />

        <!-- Hint Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E.g., Web Development, Digital Marketing, Public Speaking, etc."
            android:textSize="12sp"
            android:textColor="#555555"
            android:layout_marginBottom="24dp" />

        <!-- Continue Button -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_rounded_dark" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
