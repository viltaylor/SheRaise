<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_card_blue"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="12dp"
    android:elevation="2dp">

    <!-- Header -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_slack"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_white_bg"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="Product Designer"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Slack"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:text="$105k - $180k"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <TextView
                android:text="Jun 16, 2021"
                android:textSize="12sp"
                android:textColor="#1E88E5"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Footer Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="space_between">

        <TextView
            android:drawableLeft="@drawable/ic_applicants"
            android:text=" 113 applicants"
            android:textColor="#000000"
            android:textSize="12sp"/>

        <TextView
            android:drawableLeft="@drawable/ic_location"
            android:text=" New York"
            android:textColor="#000000"
            android:textSize="12sp"/>

        <TextView
            android:drawableLeft="@drawable/ic_jobtype"
            android:text=" Full-time"
            android:textColor="#000000"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>
