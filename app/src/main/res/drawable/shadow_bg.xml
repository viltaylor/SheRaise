<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="10sp" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Optional padding inside the shape (not always needed) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
